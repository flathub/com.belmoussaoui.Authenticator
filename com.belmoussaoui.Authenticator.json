{
    "app-id": "com.belmoussaoui.Authenticator",
    "runtime": "org.gnome.Platform",
    "runtime-version": "42",
    "sdk": "org.gnome.Sdk",
    "sdk-extensions": [
        "org.freedesktop.Sdk.Extension.rust-stable",
        "org.freedesktop.Sdk.Extension.llvm12"
    ],
    "command": "authenticator",
    "finish-args": [
        "--device=dri",
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--talk-name=org.freedesktop.secrets",
        "--env=RUST_LOG=authenticator=debug,ashpd=debug",
        "--env=G_MESSAGES_DEBUG=none",
        "--env=GST_PLUGIN_SYSTEM_PATH=/app/lib/gstreamer-1.0",
        "--own-name=com.belmoussaoui.Authenticator.SearchProvider"
    ],
    "build-options": {
        "append-path": "/usr/lib/sdk/rust-stable/bin",
        "prepend-path": "/usr/lib/sdk/llvm12/bin",
        "prepend-ld-library-path": "/usr/lib/sdk/llvm12/lib"
    },
    "modules": [
        {
            "name": "zbar",
            "config-opts": [
                "--without-qt",
                "--without-gtk",
                "--without-xv",
                "--without-imagemagick",
                "--disable-video",
                "--without-java",
                "--without-python",
                "--with-dbus=no",
                "--enable-doc=no",
                "--with-introspection=no",
                "--enable-codes=qrcode"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "git://git.linuxtv.org/zbar.git",
                    "commit": "468f6bda627d683b3f40dbaf242c158409666f7e"
                },
                {
                    "type": "script",
                    "dest-filename": "autogen.sh",
                    "commands": [
                        "autoreconf -vfi -W none"
                    ]
                }
            ]
        },
        {
            "name": "gst-bad-plugins",
            "buildsystem": "meson",
            "config-opts": [
                "-Dzbar=enabled",
                "-Drsvg=disabled",
                "-Dvulkan=disabled",
                "-Dexamples=disabled",
                "-Dtests=disabled",
                "-Dintrospection=disabled"
            ],
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.freedesktop.org/gstreamer/gst-plugins-bad.git",
                    "tag": "1.18.6"
                }
            ]
        },
        {
            "name": "authenticator",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/World/Authenticator/uploads/6238c87d5fce0da1164db0b106d540d5/authenticator-4.1.0.tar.xz",
                    "sha256": "337a6a51ad373149e867db01e143b2c710fc25b96d8cc7686cefbd657a888689"
                }
            ]
        }
    ]
}